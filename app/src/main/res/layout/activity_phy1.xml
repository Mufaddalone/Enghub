<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".phy1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="10dp"
        android:text="Engineering Physics-I"
        android:textColor="#40dddd"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <ScrollView
        android:layout_width="373dp"
        android:layout_height="499dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732">

        <TextView
            android:id="@+id/textView7"
            android:textColor="#000"
            android:layout_width="375dp"
            android:layout_height="550dp"
            android:background="@drawable/hub"
            android:padding="15dp"
            android:textSize="20dp"
            android:text="1. To understand basic physics concepts and founding principles of
technology.\n\n
2. To develop scientific temperament for scientific observations,
recording, and inference drawing essential for technology
studies.\n\n
3. Illustrate the fundamentals of quantum mechanics and its
application.\n\n
4. Explain peculiar properties of crystal structure and apply them in
crystallography using X-ray diffraction techniques.\n\n
5. Comprehend the concepts of semiconductor physics and
applications of semiconductors in electronic devices.\n\n
6. Employ the concept of interference in thin films in
measurements.\n\n
7. Discuss the properties of Superconductors and Supercapacitors
to apply them in novel applications.\n\n
8. Compare the properties of engineering materials for their current
and futuristic frontier applications.
"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.756" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>